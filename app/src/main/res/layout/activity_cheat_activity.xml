<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7b5e7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hello_world.vikas.primeornot.cheat_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/line1"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="First try yourself? In case need answer press button below."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="28sp"
            android:id="@+id/textView1"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="#5b4b49" />
    </LinearLayout>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="cheat"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:id="@+id/cheat"
        android:background="#000000"
        android:textSize="22sp"
        android:textColor="#f1fde7"
        android:onClick="OnClickcheat"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:textSize="28sp"
        android:text=""
        android:layout_marginTop="40dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/hint"
        android:textColor="#5b4b49" />


</RelativeLayout>
